import bpy
from bpy_extras.io_utils import ExportHelper

bl_info = {
    "name":         "PMF Exporter",
    "author":       "Michael Arcidiacono",
    "blender":      (2,6,2),
    "version":      (0,0,1),
    "location":     "File > Import-Export",
    "description":  "Export Peace Model Format (PMF) files",
    "category":     "Import-Export"
}

class PMFExport(bpy.types.Operator, ExportHelper):
    
    bl_idname       = "export_pmf.pmf";
    bl_label        = "PMF Exporter";
    bl_options      = {'PRESET'};
    
    filename_ext    = ".pmf";
    
    def execute(self, context):
        return {'Finished'};

def menu_func(self, context):
        self.layout.operator(PMFExport.bl_idname, \
                             text="Peace Model Format (.pmf)");

def register():
    bpy.utils.register_module(__name__);
    bpy.types.INFO_MT_file_export.append(menu_func);
    
def unregister():
    bpy.utils.unregister_module(__name__);
    bpy.types.INFO_MT_file_export.remove(menu_func);

if __name__ == "__main__":
    register()
